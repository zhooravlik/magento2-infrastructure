<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.1/phpunit.xsd"
         colors="true"
>
    <testsuites>
        <testsuite name="Client Side Performance Tests">
            <directory suffix="Test.php">testsuite</directory>
        </testsuite>
    </testsuites>
    <php>
        <ini name="date.timezone" value="America/Los_Angeles"/>
        <const name="YSLOW_TESTS_RESULTS" value="yslow/results"/>
        <const name="YSLOW_TESTS_RESULTS_MAINLINE" value="yslow/results/mainline"/>
        <const name="YSLOW_TESTS_RESULTS_TEAMFORK" value="yslow/results/team-fork"/>
    </php>
</phpunit>
