<config>
    <profile>
        <configs> <!-- Config variables and values for change -->
            <config>
                <path>design/theme/theme_id</path>
                <scope>default</scope>
                <scopeId>0</scopeId>
                <value>2</value>
            </config>
            <config>
                <path>system/full_page_cache/ttl</path>
                <scope>default</scope>
                <scopeId>0</scopeId>
                <value>21600</value>
            </config>
            <config>
                <path>catalog/frontend/flat_catalog_category</path>
                <scope>default</scope>
                <scopeId>0</scopeId>
                <value>1</value>
            </config>
            <config>
                <path>catalog/frontend/flat_catalog_product</path>
                <scope>default</scope>
                <scopeId>0</scopeId>
                <value>1</value>
            </config>
            <config>
                <path>dev/css/merge_css_files</path>
                <scope>default</scope>
                <scopeId>0</scopeId>
                <value>%merge_css%</value>
            </config>
            <config>
                <path>dev/css/minify_files</path>
                <scope>default</scope>
                <scopeId>0</scopeId>
                <value>%minify_css%</value>
            </config>
            <config>
                <path>dev/js/merge_files</path>
                <scope>default</scope>
                <scopeId>0</scopeId>
                <value>%merge_js%</value>
            </config>
            <config>
                <path>dev/js/minify_files</path>
                <scope>default</scope>
                <scopeId>0</scopeId>
                <value>%minify_js%</value>
            </config>
            <config>
                <path>dev/js/enable_js_bundling</path>
                <scope>default</scope>
                <scopeId>0</scopeId>
                <value>%js_bundling%</value>
            </config>
            <config>
                <path>dev/grid/async_indexing</path>
                <scope>default</scope>
                <scopeId>0</scopeId>
                <value>%async_indexing%</value>
            </config>
            <config>
                <path>sales_email/general/async_sending</path>
                <scope>default</scope>
                <scopeId>0</scopeId>
                <value>%async_sending%</value>
            </config>
        </configs>
        <indexers> <!-- Indexer mode value (true - Update by Schedule, false - Update on Save) -->
            <indexer>
                <id>catalog_category_product</id>
                <set_scheduled>true</set_scheduled>
            </indexer>
            <indexer>
                <id>catalog_product_category</id>
                <set_scheduled>true</set_scheduled>
            </indexer>
            <indexer>
                <id>catalog_product_price</id>
                <set_scheduled>true</set_scheduled>
            </indexer>
            <indexer>
                <id>catalog_product_attribute</id>
                <set_scheduled>true</set_scheduled>
            </indexer>
            <indexer>
                <id>cataloginventory_stock</id>
                <set_scheduled>true</set_scheduled>
            </indexer>
            <indexer>
                <id>catalogrule_rule</id>
                <set_scheduled>true</set_scheduled>
            </indexer>
            <indexer>
                <id>catalogrule_product</id>
                <set_scheduled>true</set_scheduled>
            </indexer>
            <indexer>
                <id>catalogsearch_fulltext</id>
                <set_scheduled>true</set_scheduled>
            </indexer>
            <indexer>
                <id>targetrule_product_rule</id>
                <set_scheduled>true</set_scheduled>
            </indexer>
            <indexer>
                <id>targetrule_rule_product</id>
                <set_scheduled>true</set_scheduled>
            </indexer>
        </indexers>
    </profile>
</config>